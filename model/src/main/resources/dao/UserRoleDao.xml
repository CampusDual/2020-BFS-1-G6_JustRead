<?xml version="1.0" encoding="UTF-8"?>
<JdbcEntitySetup
	xmlns="http://www.ontimize.com/schema/jdbc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.ontimize.com/schema/jdbc http://www.ontimize.com/schema/jdbc/ontimize-jdbc-dao.xsd"
	catalog="" schema="${mainschema}" table="USER_ROLES"
	datasource="mainDataSource" sqlhandler="dbSQLStatementHandler">
	<DeleteKeys>
		<Column>USER_ID</Column>
	</DeleteKeys>
	<UpdateKeys>
		<Column>USER_ID</Column>
	</UpdateKeys>
	<Queries>
		<Query id="login">
			<Sentence>
                <![CDATA[
                    SELECT
                        #COLUMNS#
                    FROM ${mainschema}.users
                    #WHERE#
                    #ORDER#
                ]]>
            </Sentence>
		</Query>
		<Query id="userRole">
			<AmbiguousColumns>
				<AmbiguousColumn name="USER_ID" prefix="tu" />
				<AmbiguousColumn name="ROLE_ID" prefix="tr" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.users tu
						JOIN ${mainschema}.user_roles tur ON tu.USER_ID = tur.USER_ID
						JOIN ${mainschema}.roles tr ON tur.ROLE_ID = tr.ROLE_ID
					#WHERE#
					#ORDER#
					]]>
			</Sentence>
		</Query>
		<Query id="serverPermissions">
			<AmbiguousColumns>
				<AmbiguousColumn name="ROLE_ID" prefix="tr" />
				<AmbiguousColumn name="SERVER_PERMISSION_ID" prefix="tsp" />
			</AmbiguousColumns>
			<Sentence>
					<![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.ROLES tr
						JOIN ${mainschema}.ROLE_SERVER_PERMISSION trsp ON tr.ROLE_ID = trsp.ROLE_ID
						JOIN ${mainschema}.SERVER_PERMISSION tsp ON trsp.SERVER_PERMISSION_ID = tsp.SERVER_PERMISSION_ID
					#WHERE#
					#ORDER#
					]]>
		</Sentence>
		</Query>
		<Query id="clientPermissions">
			<Sentence>
					<![CDATA[
					select
						#COLUMNS#
					from
						${mainschema}.ROLES tr
					#WHERE#
					#ORDER#
					]]>
		</Sentence>
		</Query>
	</Queries>
</JdbcEntitySetup>